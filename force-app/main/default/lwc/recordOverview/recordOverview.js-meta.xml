<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Record Overview</masterLabel>
    <description>A tile that displays the overview of a record</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig
            targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Default"
        >
            <property name="title" type="String" label="Title" />
            <property
                name="iconName"
                type="String"
                label="Icon Name"
                description="SLDS icon name such as 'standard:case'"
            />
            <property
                name="objectApiName"
                type="String"
                label="Object API Name"
            />
            <property name="recordId" type="String" label="Record ID" />
            <property
                name="fieldNames"
                type="String"
                label="Record Fields"
                description="Comma-separated list of field API names"
            />
            <property name="isReadonly" type="Boolean" label="Read Only" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
